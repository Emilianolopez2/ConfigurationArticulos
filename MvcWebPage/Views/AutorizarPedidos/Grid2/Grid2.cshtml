                .Text("Unidad")
                .Width("170");

            column.Add(p => p.REFERENCIA2)
                .Editable(false)
                .CellsAlign("center")
                .CellClassName("cellclass2")
                .Text("Articulo")
                .Width("170");

            column.Add(p => p.CODIGO)
                .Editable(false)
                .CellsAlign("center")
                .CellsRenderer("cellsrenderer2")
                .CellClassName("cellclass2")
                .Text("<span class=\"GridMP\">Codigo Proveedor</span>")
                .Width("170");

            column.Add(p => p.DESCRIPCION2)
                .Editable(false)
                //.CellsAlign("center")
                .Text("Descripcion")
                .CellClassName("cellclass2")
                .Width("170");

            column.Add(p => p.PRECIO)
                .Editable(false)
                .Validation("validaPrecio")
                .CellsAlign("center")
                .CellClassName("cellclass2")
                .CellsFormat("C2")
                .Text("<span class=\"GridMP\">Costo Unitario</span>")
                .Width("170");

            column.Add(p => p.DTO)
                .Editable(false)
                .CellsAlign("center")
                .CellClassName("cellclass2")
                .CellsFormat("C2")
                .Text("Descuento")
                .Width("170");
                
            column.Add(p => p.TOTALLINEA)
                .Editable(false)
                .CellsAlign("center")
                .CellClassName("cellclass2")
                .CellsFormat("C2")
                .Text("<span class=\"GridMP\">Importe sin Impuestos</span>")
                .Width("170");


            column.Add(p => p.TOTIVA)
                .Editable(false)
                .CellsAlign("center")
                .CellClassName("cellclass2")
                .CellsFormat("C2")
                .Text("IVA")
                .Width("170");

            column.Add(p => p.TOTREQ)
                .Editable(false)
                .CellsAlign("center")
                .CellClassName("cellclass2")
                .CellsFormat("C2")
                .Text("IEPS")
                .Width("170");

            column.Add(p => p.TOTAL)
                .Editable(false)
                .CellsAlign("center")
                .CellClassName("cellclass2")
                .CellsFormat("C2")
                .Text("Total")
                .Width("170");


            column.Add(p => "Eliminar")
                //.ColumnType("button")
                .CellsRenderer("eliminar2")
                .Text("Eliminar")
                .Width("70");

        }).Create();

}
<div align="center"></div>

